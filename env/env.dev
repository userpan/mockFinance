# 开发环境配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# CORS配置
# 开发环境: 允许本地开发 + 所有HTTPS域名（便于测试）
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://*

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/mockfinance_dev

# JWT配置
JWT_SECRET=dev-jwt-secret-key-not-for-production-use-only
JWT_EXPIRE=7d

# Redis配置（开发环境可选）
REDIS_HOST=localhost
REDIS_PORT=6379

# WebSocket配置
WEBSOCKET_PORT=3001

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# 交易配置
DEFAULT_GAME_DURATION=600000
DEFAULT_FEE_RATE=0.001
MAX_PLAYERS_PER_ROOM=12
DATA_PUSH_INTERVAL=500

# 安全配置
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=5000 